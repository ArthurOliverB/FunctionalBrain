<h1>Customers</h1>
    
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     
  <% @customer.each do |c|%>
    <tr>
        <td><%=c.name%></td>
        <td><%=c.email%></td>
        <td><%=c.birthday%></td>
        <td><%=c.obs%></td>
    <tr>
  <%end%>
    <tr><td><%= link_to "Novo Cliente", new_customer_path%></td></tr>
  </tbody>
  
</table>